material Tetris/WellWallWithTitle
{
	receive_shadows	off

	technique
	{
		pass
		{
			lighting			on
			//depth_check		off
			cull_hardware		none

			texture_unit
			{
				texture			"cylinder background.png"
				scale			0.1111111 0.016666667
				scroll_anim		0 0.018
			}

			texture_unit
			{
				colour_op_ex	modulate src_texture src_current
				texture			"cylinder background.png"
				scale			0.1111111 0.016666667
				scroll_anim		0 0.018
			}

			texture_unit
			{
				colour_op_ex	modulate src_texture src_current
				texture			"cylinder background.png"
				scale			0.1111111 0.016666667
				scroll_anim		0 0.018
			}

			texture_unit
			{
				colour_op_ex	modulate src_manual src_current 0.7 0.7 0.7
			}
		}

		pass
		{
			lighting		off
			scene_blend		src_colour one_minus_src_colour

			texture_unit
			{
				//colour_op			add
				texture				"Title.png"
				scale				-0.3333333 -0.05
				scroll				0 0
				scroll_anim			0 -0.04
				//env_map				cubic_reflection
				tex_address_mode	wrap
			}
		}
	}
}

material Tetris/Reflection
{
	technique
	{
		pass
		{
			texture_unit	CylinderBackground
			{
				colour_op_ex	blend_manual src_texture src_current 0.8
				texture			"cylinder background.png" cubic
				scale			0.4 0.4
				env_map			cubic_reflection
			}
		}
	}
}

abstract pass Tetris/ReflectionPass
{
	texture_unit	CylinderBackground
	{
		colour_op_ex	blend_manual src_texture src_current 0.8
		texture			"cylinder background.png" cubic
		scale			0.4 0.4
		env_map			cubic_reflection
	}
}

