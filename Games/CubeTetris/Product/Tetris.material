material Tetris/SkyBox
{
	technique
	{
		pass
		{
			lighting off
			depth_write off

			texture_unit
			{
				cubic_texture		Front.jpg Back.jpg Left.jpg Right.jpg Up.jpg Down.jpg	separateUV
				tex_address_mode	clamp
			}
		}
	}
}

material Tetris/Fence
{
	technique
	{
		pass
		{
			scene_blend		src_alpha one

			ambient			0.8 0.8 1 0.06
			diffuse			0.8 0.8 1 0.06
			specular		0.8 0.8 1 192

			depth_write		off
			cull_hardware	none

			texture_unit
			{
				colour_op	add
				texture		Bu-0038.JPG
				scale		1 0.06667
				scroll_anim	0 0.16
			}
		}
	}
}

material Tetris/TopBoard
{
	receive_shadows	off

	technique
	{
		pass
		{
			scene_blend		one one_minus_src_alpha
			cull_hardware	none

			ambient			0 0 0
			diffuse			1 0 0 0.7
			emissive		1 0 0

			texture_unit
			{
				colour_op_ex		blend_texture_alpha src_diffuse src_texture
				alpha_op_ex			modulate src_texture src_current
				texture				round7.png alpha
				rotate_anim			0.2
				tex_address_mode	border
				tex_border_colour	0 0 0 0
			}
		}
	}
}

