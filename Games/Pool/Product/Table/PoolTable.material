
material Pool/Table/Base
{
	technique	Default
	{
		pass
		{
			vertex_program_ref	Pool/pnt1
			{
			}

			fragment_program_ref	Pool/Ambient
			{
			}

			texture_unit
			{
				texture		$DiffuseMap
			}
		}

		pass
		{
			scene_blend	add
			iteration	once_per_light spot

			vertex_program_ref	Pool/pnt1
			{
			}

			fragment_program_ref	Pool/Lambert
			{
			}

			texture_unit
			{
				texture		$DiffuseMap
			}
		}
	}

	technique Spherical
	{
		scheme	Spherical
	}
}

material Pool/Table/InSphericalMap : Pool/Table/Base
{
	technique Spherical
	{
		scheme	Spherical

		pass
		{
			cull_hardware	anticlockwise

			vertex_program_ref	Pool/Sperical
			{
			}

			fragment_program_ref	Pool/Ambient
			{
			}

			texture_unit
			{
				texture		$DiffuseMap
			}
		}

		pass
		{
			scene_blend	add
			iteration	once_per_light spot
			cull_hardware	anticlockwise

			vertex_program_ref	Pool/Sperical
			{
			}

			fragment_program_ref	Pool/Lambert
			{
			}

			texture_unit
			{
				texture		$DiffuseMap
			}
		}
	}
}

